<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs') %>
<%- include('../includes/nav.ejs') %>

<div class="container py-16">
    <div class="max-w-lg mx-auto shadow px-6 py-7 rounded overflow-hidden">
        <h2 class="text-2xl uppercase font-medium mb-1">Login</h2>
        <p class="text-gray-600 mb-6 text-sm">Login if you are a returning customer</p>
        <form action="">
            <div class="space-y-4">
                <div>
                    <label for="email" class="text-gray-600 mb-2 block">Email:</label>
                    <input type="email" class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400" placeholder="Enter your email">
                </div>
                <div>
                    <label for="password" class="text-gray-600 mb-2 block">Password:</label>
                    <input type="password" class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400" placeholder="Enter your password">
                </div>
            </div>
            <div class="mt-6">
                <a href="#" class="text-primary">Forgot password?</a>
            </div>
            <div class="mt-4">
                <button type="submit" class="block w-full py-2 text-center text-white bg-primary border border-primary rounded hover:bg-transparent hover:text-primary transition font-roboto font-medium">Login</button>
            </div>
        </form>
        <p class="mt-4 text-gray-600 text-center">Don't have an account? <a class="text-primary" href="#">Register now</a></p>
    </div>

</div>

<%- include('../includes/end.ejs') %>