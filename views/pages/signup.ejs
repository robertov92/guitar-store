<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs') %>
<%- include('../includes/nav.ejs') %>

<div class="container py-16">
    <div class="max-w-lg mx-auto shadow px-6 py-7 rounded overflow-hidden">
        <h2 class="text-2xl uppercase font-medium mb-1">Sign-Up</h2>
        <form action="/signup" method="POST">
            <div class="space-y-4">
                <% if (errorMessage) { %><div class="text-red-500"><%= errorMessage %></div><% } %> 
                <div>
                    <label for="email" class="text-gray-600 mb-2 block">Email:</label>
                    <input  type="email" name="email" value="<%= oldInput.email %>" class="<%= validationErrors.find(e=>e.param === 'email') ? 'border-red-500' : '' %> block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400" placeholder="Enter your email">
                </div>
                <div>
                    <label for="password" class="text-gray-600 mb-2 block">Password:</label>
                    <input type="password" name="password" value="<%= oldInput.password %>" class="<%= validationErrors.find(e=>e.param === 'password') ? 'border-red-500' : '' %> block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400" placeholder="Enter your password">
                </div>
                <div>
                    <label for="password" class="text-gray-600 mb-2 block">Confirm Password:</label>
                    <input type="password" name="confirmPassword" value="<%= oldInput.confirmPassword %>" class="<%= validationErrors.find(e=>e.param === 'confirmPassword') ? 'border-red-500' : '' %> block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400" placeholder="Re-enter your password">
                </div>
            </div>
            <div class="mt-10">
                <button type="submit" class="block w-full py-2 text-center text-white bg-primary border border-primary rounded hover:bg-transparent hover:text-primary transition font-roboto font-medium">Create Account</button>
            </div>
        </form>
    </div>

</div>

<%- include('../includes/end.ejs') %>