<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs') %>
<%- include('../includes/nav.ejs') %>

<!-- breadcrums -->
<div class="container py-4 flex items-center gap-3">
    <%- include('../includes/breadcrum.ejs') %>
    <p class="text-gray-600 font-medium">Shop</p>
</div>

<!-- shop wrapper -->
<div class="container grid grid-cols-1 md:grid-cols-2 md:gap-6 lg:grid-cols-3 xl:grid-cols-4 pt-4 pb-16 items-start">
    <!--sidebar-->
    <!--small screen button-->
    <div class="md:hidden flex items-center pb-4">
        <button id="btn-filters">
            <svg class="h-6 w-6 text-gray-700" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
        <p class="font-poppins ml-3 text-xl text-gray-700">Filters</p>
    </div>
    <!--filters-->
    <div id="filters" class="mb-6 col-span-1 bg-white px-4 pb-6 shadow rounded overflow-hidden hidden md:block">
        <div class="divide-y divide-gray-200 space-y-5">
            <!--category filter-->
            <div class="pt-4">
                <h3 class="text-xl text-gray-800 mb-3 uppercase font-medium">categories</h3>
                <div class="space-y-2">
                    <div class="flex items-center">
                        <input type="checkbox" id="cat-1" class="text-primary focus:ring-0 rounded-sm cursor-pointer">
                        <label for="cat-1" class="text-gray-600 ml-3 cursor-pointer">category 1</label>
                        <div class="ml-auto text-gray-600 text-sm">(15)</div>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="cat-2" class="text-primary focus:ring-0 rounded-sm cursor-pointer">
                        <label for="cat-2" class="text-gray-600 ml-3 cursor-pointer">category 2</label>
                        <div class="ml-auto text-gray-600 text-sm">(15)</div>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="cat-3" class="text-primary focus:ring-0 rounded-sm cursor-pointer">
                        <label for="cat-3" class="text-gray-600 ml-3 cursor-pointer">category 3</label>
                        <div class="ml-auto text-gray-600 text-sm">(15)</div>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="cat-4" class="text-primary focus:ring-0 rounded-sm cursor-pointer">
                        <label for="cat-4" class="text-gray-600 ml-3 cursor-pointer">category 4</label>
                        <div class="ml-auto text-gray-600 text-sm">(15)</div>
                    </div>
                </div>
            </div>
            <!--brands filter-->
            <div class="pt-4">
                <h3 class="text-xl text-gray-800 mb-3 uppercase font-medium">brands</h3>
                <div class="space-y-2">
                    <div class="flex items-center">
                        <input type="checkbox" id="brand-1" class="text-primary focus:ring-0 rounded-sm cursor-pointer">
                        <label for="brand-1" class="text-gray-600 ml-3 cursor-pointer">brand 1</label>
                        <div class="ml-auto text-gray-600 text-sm">(15)</div>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="brand-2" class="text-primary focus:ring-0 rounded-sm cursor-pointer">
                        <label for="brand-2" class="text-gray-600 ml-3 cursor-pointer">brand 2</label>
                        <div class="ml-auto text-gray-600 text-sm">(15)</div>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="brand-3" class="text-primary focus:ring-0 rounded-sm cursor-pointer">
                        <label for="brand-3" class="text-gray-600 ml-3 cursor-pointer">brand 3</label>
                        <div class="ml-auto text-gray-600 text-sm">(15)</div>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="brand-4" class="text-primary focus:ring-0 rounded-sm cursor-pointer">
                        <label for="brand-4" class="text-gray-600 ml-3 cursor-pointer">brand 4</label>
                        <div class="ml-auto text-gray-600 text-sm">(15)</div>
                    </div>
                </div>
            </div>
            <!--price filter-->
            <div class="pt-4">
                <h3 class="text-xl text-gray-800 mb-3 uppercase font-medium">price</h3>
                <div class="mt-4 flex items-center">
                    <input id="min-price" type="text" class="w-full border-gray-300 focus:border-primary focus:ring-0 px-3 py-1 text-gray-600 text-sm shadow-sm rounded" placeholder="min">
                    <span class="mx-3 text-gray-500">-</span>
                    <input id="max-price" type="text" class="w-full border-gray-300 focus:border-primary focus:ring-0 px-3 py-1 text-gray-600 text-sm shadow-sm rounded" placeholder="max">
                </div>

            </div>
        </div>
    </div>

    <!--products-->
    <div class="col-span-1 lg:col-span-2 xl:col-span-3">
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
            <% for (let product of prods) { %> 
                <div class="bg-white shadow rounded overflow-hidden group flex flex-col justify-between">
                    <div class="relative">
                        <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="w-full">
                        <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition">
                            <a href="/shop/<%= product._id %>" class="text-white text-lg w-9 h-8 rounded-full bg-primary flex items-center justify-center hover:bg-gray-800 transition">
                                <i class="fa fa-search"></i>
                            </a>
                            <a href="#" class="text-white text-lg w-9 h-8 rounded-full bg-primary flex items-center justify-center hover:bg-gray-800 transition">
                                <i class="fa fa-heart"></i>
                            </a>
                        </div>
                    </div>
                    <div class="pt-4 pb-3 px-4">
                        <a href="#">
                            <h4 class="uppercase font-medium text-xl mb-2 text-gray-800 hover:text-primary transition"><%= product.title %></h4>
                        </a>
                        <div class="flex items-baseline mb-1 space-x-2 font-roboto">
                            <p class="text-xl text-primary font-semibold">$<%= product.price %></p>
                            <!--original price <p class="text-sm text-gray-400 line-through">$999</p> -->
                        </div>
                        <div class="flex items-center">
                            <div class="flex gap-1 text-sm text-yellow-400">
                                <span><i class="fas fa-star"></i></span>
                                <span><i class="fas fa-star"></i></span>
                                <span><i class="fas fa-star"></i></span>
                                <span><i class="fas fa-star"></i></span>
                                <span><i class="fas fa-star"></i></span>
                            </div>
                            <div class="text-xs text-gray-500 ml-3">(150)</div>
                        </div>
                    </div>
                    <% if (product.stock > 0) { %>
                    <a href="#" class="block w-full py-1 text-center text-white bg-primary border border-primary rounded-b hover:bg-transparent hover:text-primary transition">Add to cart</a>
                    <% } else { %>
                    <p class="cursor-not-allowed block w-full py-1 text-center text-white bg-gray-400 rounded-b border border-gray-400">Out of Stock</p>
                    <% } %> 
                </div>
            <% } %> 
        </div>

    </div>
</div>

<script>
    // toggle button for small screens
    const btn2 = document.getElementById("btn-filters");
    const filters = document.getElementById("filters");
    btn2.addEventListener("click", () => {
        filters.classList.toggle("hidden");
    });
</script>

<%- include('../includes/end.ejs') %>