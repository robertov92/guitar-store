<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs') %>
<%- include('../includes/nav.ejs') %>

<!-- breadcrums -->
<div class="container py-4 flex items-center gap-3">
    <%- include('../includes/breadcrum.ejs') %>
    <p class="text-gray-600 font-medium">Account</p>
</div>

<div class="container grid grid-cols-12 items-start gap-6 pt-4 pb-16">

    <%- include('../includes/account-side-links.ejs') %>

    <div class="col-span-9 shadow rounded px-6 pt-5 pb-7">
        <h4 class="text-lg font-medium capitalize mb-4">Profile Inforation</h4>
        <div class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="text-gray-600 mb-2 block">First Name: <span class="text-red-500">*</span></label>
                    <input placeholder="Enter your first name" type="text" class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded placeholder-gray-400 focus:border-primary focus:ring-0">
                </div>
                <div>
                    <label class="text-gray-600 mb-2 block">Last Name: <span class="text-red-500">*</span></label>
                    <input placeholder="Enter your first name" type="text" class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded placeholder-gray-400 focus:border-primary focus:ring-0">
                </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="text-gray-600 mb-2 block">First Name: <span class="text-red-500">*</span></label>
                    <input type="date" class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded placeholder-gray-400 focus:border-primary focus:ring-0">
                </div>
                <div>
                    <label class="text-gray-600 mb-2 block">Last Name: <span class="text-red-500">*</span></label>
                    <select class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded placeholder-gray-400 focus:border-primary focus:ring-0">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="text-gray-600 mb-2 block">Email: <span class="text-red-500">*</span></label>
                    <input placeholder="Enter your email" type="email" class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded placeholder-gray-400 focus:border-primary focus:ring-0">
                </div>
                <div>
                    <label class="text-gray-600 mb-2 block">Phone Number: <span class="text-red-500">*</span></label>
                    <input placeholder="Enter your phone number" type="text" class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded placeholder-gray-400 focus:border-primary focus:ring-0">
                </div>
            </div>
            <div class="mt-10">
                <button type="submit" class="py-2 px-4 text-center text-white bg-primary border border-primary rounded hover:bg-transparent hover:text-primary transition">Save Changes</button>
    
            </div>
        </div>
    </div>

</div>

<%- include('../includes/end.ejs') %>