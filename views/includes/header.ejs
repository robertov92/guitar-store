<header class="py-4 shadow-sm bg-white">
    <div class="container flex items-center justify-between ">
        <!--Logo-->
        <a href="/">
            <img src="/images/icon.png" class="w-12" alt="Logo">
        </a>

        <!--Search bar-->
        <div class="w-full max-w-xl relative hidden lg:flex">
            <span class="absolute left-4 top-3 text-lg text-gray-400">
                <i class="fas fa-search"></i>
            </span>
            <input type="text" class="w-full border border-primary border-r-0 pl-12 py-3 rounded-l-md focus:outline-none" placeholder="Search">
            <button class="bg-primary border border-primary text-white px-8 rounded-r-md hover:bg-transparent hover:text-primary transition">Search</button>
        </div>

        <!--wishlist, cart, account icons-->
        <div class="flex items-center space-x-4">
            <% if (isAuthenticated) { %> 
            <a href="/wishlist" class="text-center text-gray-700 hover:text-primary transition relative">
                <div class="text-2xl">
                    <i class='fas fa-heart'></i>
                </div>
                <div class="text-xs leading-3">Wish List</div>
                <% if (wishlistItems > 0) { %> 
                <span class="absolute right-0 top-1 w-5 rounded-full flex items-center justify-center bg-primary text-white text-xs"><%= wishlistItems %></span>
                <% } %> 
            </a>
            <a href="/cart" class="text-center text-gray-700 hover:text-primary transition relative">
                <div class="text-2xl">
                    <i class='fas fa-shopping-cart'></i>
                </div>
                <div class="text-xs leading-3">Cart</div>
                <% if (cartItems > 0) { %> 
                <span class="absolute -right-3 top-1 w-5 rounded-full flex items-center justify-center bg-primary text-white text-xs"><%= cartItems %></span>
                <% } %> 
            </a>
            <% } %> 
            <a href="<% if (isAuthenticated) { %>/account<% } else { %>/login<% } %>" class="text-center text-gray-700 hover:text-primary transition relative">
                <div class="text-2xl">
                    <i class='fas fa-user'></i>
                </div>
                <div class="text-xs leading-3"><% if (isAuthenticated) { %>My Account<% } else { %>Login/Signup<% } %></div>
            </a>
        </div>
    </div>
    <!--Search bar small screens-->
    <div class="container">
        <div class="w-full relative lg:hidden flex pt-4">
            <span class="absolute left-4 top-7 text-lg text-gray-400">
                        <i class="fas fa-search"></i>
                    </span>
            <input type="text" class="w-full border border-primary border-r-0 pl-12 py-3 rounded-l-md focus:outline-none" placeholder="Search">
            <button class="bg-primary border border-primary text-white px-8 rounded-r-md hover:bg-transparent hover:text-primary transition">Search</button>
        </div>
    </div>
</header>